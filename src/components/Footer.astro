---
// Componente Footer - Cierre profesional con información de contacto
export interface Props {
  nombreEmpresa?: string;
  email?: string;
  telefono?: string;
  direccion?: string;
  redesSociales?: {
    facebook?: string;
    instagram?: string;
    twitter?: string;
    linkedin?: string;
  };
}

const {
  nombreEmpresa = "Tu Página Web Gratis",
  email = "info@tupaginagratis.com",
  telefono = "+1 234 567 890",
  direccion = "Tu Ciudad, Tu País",
  redesSociales = {
    facebook: "#",
    instagram: "#",
    twitter: "#",
    linkedin: "#"
  }
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Contenido principal del footer -->
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Información de la empresa -->
      <div class="md:col-span-2">
        <h3 class="text-2xl font-bold text-white mb-4">
          {nombreEmpresa}
        </h3>
        <p class="text-gray-400 mb-4 leading-relaxed">
          Ayudamos a pequeñas y medianas empresas a tener presencia profesional en internet sin costos. 
          Tu éxito digital comienza aquí.
        </p>
        
        <!-- Badges de confianza -->
        <div class="flex flex-wrap gap-4">
          <span class="inline-flex items-center gap-2 text-sm">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            100% Gratis
          </span>
          <span class="inline-flex items-center gap-2 text-sm">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            +500 Clientes
          </span>
        </div>
      </div>
      
      <!-- Enlaces rápidos -->
      <div>
        <h4 class="text-white font-semibold mb-4">Enlaces Rápidos</h4>
        <ul class="space-y-2">
          <li>
            <a href="#hero" class="hover:text-white transition-colors">
              Inicio
            </a>
          </li>
          <li>
            <a href="#features" class="hover:text-white transition-colors">
              Beneficios
            </a>
          </li>
          <li>
            <a href="#testimonials" class="hover:text-white transition-colors">
              Testimonios
            </a>
          </li>
          <li>
            <a href="#faq" class="hover:text-white transition-colors">
              Preguntas Frecuentes
            </a>
          </li>
          <li>
            <a href="#formulario" class="hover:text-white transition-colors">
              Solicitar Página
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Contacto -->
      <div>
        <h4 class="text-white font-semibold mb-4">Contacto</h4>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-blue-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href={`mailto:${email}`} class="hover:text-white transition-colors">
              {email}
            </a>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-blue-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href={`tel:${telefono}`} class="hover:text-white transition-colors">
              {telefono}
            </a>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-blue-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>{direccion}</span>
          </li>
        </ul>
        
        <!-- Redes sociales -->
        <div class="flex gap-4 mt-6">
          {redesSociales.facebook && (
            <a 
              href={redesSociales.facebook} 
              class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-600 transition-colors"
              aria-label="Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          )}
          {redesSociales.instagram && (
            <a 
              href={redesSociales.instagram} 
              class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-pink-600 transition-colors"
              aria-label="Instagram"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
              </svg>
            </a>
          )}
          {redesSociales.twitter && (
            <a 
              href={redesSociales.twitter} 
              class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-400 transition-colors"
              aria-label="Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          )}
          {redesSociales.linkedin && (
            <a 
              href={redesSociales.linkedin} 
              class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-700 transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Barra inferior -->
  <div class="border-t border-gray-800">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-400">
          © {currentYear} {nombreEmpresa}. Todos los derechos reservados.
        </p>
        <div class="flex gap-6 text-sm">
          <a href="/privacidad" class="hover:text-white transition-colors">
            Política de Privacidad
          </a>
          <a href="/terminos" class="hover:text-white transition-colors">
            Términos de Servicio
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>