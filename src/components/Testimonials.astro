---
// Componente Testimonials - Prueba social para generar confianza
export interface Props {
  titulo?: string;
  subtitulo?: string;
  testimonios?: Array<{
    nombre: string;
    empresa: string;
    testimonio: string;
    rating?: number;
    imagen?: string;
  }>;
}

const {
  titulo = "Lo Que Dicen Nuestros Clientes",
  subtitulo = "Más de 500 empresas ya tienen su página web gratis con nosotros",
  testimonios = [
    {
      nombre: "Ana García",
      cargo: "Diseñadora Freelance",
      texto: "Increíble servicio. Mi página quedó exactamente como la quería y el proceso fue muy fácil.",
      imagen: "/testimonials/ana.jpg"
    },
    {
      nombre: "Carlos Ruiz",
      cargo: "Dueño de Restaurante",
      texto: "No podía creer que fuera gratis. La calidad es excepcional y el soporte es excelente.",
      imagen: "/testimonials/carlos.jpg"
    },
    {
      nombre: "María Torres",
      cargo: "Consultora Independiente",
      texto: "Mi negocio creció un 200% después de tener mi página web profesional. ¡Totalmente recomendado!",
      imagen: "/testimonials/maria.jpg"
    }
  ]
} = Astro.props;

const stats = [
  {
    numero: "500+",
    texto: "Páginas Creadas"
  },
  {
    numero: "4.9/5",
    texto: "Satisfacción"
  },
  {
    numero: "24h",
    texto: "Tiempo Promedio"
  }
];

// Función para generar las estrellas
function generateStars(rating: number) {
  return Array(5).fill(0).map((_, i) => i < rating);
}
---

<section class="py-20 bg-[var(--bg-primary)]">
  <div class="container-custom">
    <!-- Encabezado -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-[var(--text-primary)] mb-4">
        {titulo}
      </h2>
      <p class="text-lg text-[var(--text-secondary)]">
        {subtitulo}
      </p>
    </div>

    <!-- Estadísticas -->
    <div class="grid grid-cols-3 gap-8 max-w-3xl mx-auto mb-16">
      {stats.map(stat => (
        <div class="text-center">
          <div class="text-3xl font-bold text-[var(--color-primary-600)] dark:text-[var(--color-primary-500)]">
            {stat.numero}
          </div>
          <div class="text-[var(--text-secondary)] mt-1">
            {stat.texto}
          </div>
        </div>
      ))}
    </div>

    <!-- Testimonios -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonios.map((testimonio, index) => (
        <div class="relative">
          <!-- Tarjeta de testimonio -->
          <div class="bg-[var(--bg-secondary)] rounded-2xl p-6 h-full">
            <!-- Avatar y detalles -->
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-[var(--color-primary-500)] to-[var(--color-primary-600)] dark:from-[var(--color-primary-400)] dark:to-[var(--color-primary-500)] rounded-full flex items-center justify-center text-white font-semibold shadow-md">
                {testimonio.nombre.charAt(0)}
              </div>
              <div class="ml-4">
                <div class="font-semibold text-[var(--text-primary)]">
                  {testimonio.nombre}
                </div>
                <div class="text-sm text-[var(--text-secondary)]">
                  {testimonio.cargo}
                </div>
              </div>
            </div>
            
            <!-- Texto del testimonio -->
            <p class="text-[var(--text-secondary)] leading-relaxed">
              "{testimonio.texto}"
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12 p-8 bg-[var(--bg-secondary)] rounded-2xl border border-[var(--color-primary-100)]/10 dark:border-[var(--color-primary-100)]/5">
      <h3 class="text-2xl font-bold text-[var(--text-primary)] mb-4">
        ¿Listo para Unirte a Ellos?
      </h3>
      <a
        href="#contacto"
        class="inline-flex items-center gap-2 px-6 py-3 gradient-button text-white font-semibold rounded-lg hover:opacity-90 transition-colors group"
      >
        Comienza Ahora - ¡Es Gratis!
        <svg
          class="w-5 h-5 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"
          />
        </svg>
      </a>
    </div>
  </div>
</section>