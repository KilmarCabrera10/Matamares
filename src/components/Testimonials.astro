---
// Componente Testimonials - Prueba social para generar confianza
export interface Props {
  titulo?: string;
  subtitulo?: string;
  testimonios?: Array<{
    nombre: string;
    empresa: string;
    testimonio: string;
    rating?: number;
    imagen?: string;
  }>;
}

const {
  titulo = "Lo Que Dicen Nuestros Clientes",
  subtitulo = "Más de 500 empresas ya tienen su página web gratis con nosotros",
  testimonios = [
    {
      nombre: "María González",
      empresa: "Café Aroma",
      testimonio: "No podía creer que fuera gratis. En 2 días tenía mi página funcionando y ya he recibido varios clientes nuevos. ¡Increíble servicio!",
      rating: 5,
      imagen: "MG"
    },
    {
      nombre: "Carlos Rodríguez",
      empresa: "Consultoría CR",
      testimonio: "Pensé que habría algún truco, pero no. Mi página es profesional, rápida y no he pagado nada. El soporte es excelente.",
      rating: 5,
      imagen: "CR"
    },
    {
      nombre: "Ana Martínez",
      empresa: "Yoga & Bienestar",
      testimonio: "La página superó mis expectativas. Mis clientes la adoran y puedo actualizar el contenido fácilmente. 100% recomendado.",
      rating: 5,
      imagen: "AM"
    }
  ]
} = Astro.props;

// Función para generar las estrellas
function generateStars(rating: number) {
  return Array(5).fill(0).map((_, i) => i < rating);
}
---

<section id="testimonials" class="py-20 bg-gray-50">
  <div class="container-custom">
    <!-- Encabezado -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        {titulo}
      </h2>
      <p class="text-lg text-gray-600">
        {subtitulo}
      </p>
      
      <!-- Estadísticas rápidas -->
      <div class="flex justify-center gap-8 mt-8">
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600">500+</div>
          <div class="text-sm text-gray-600">Páginas creadas</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600">4.9/5</div>
          <div class="text-sm text-gray-600">Satisfacción</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600">24h</div>
          <div class="text-sm text-gray-600">Tiempo promedio</div>
        </div>
      </div>
    </div>
    
    <!-- Grid de testimonios -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonios.map((testimonio, index) => (
        <div 
          class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 animate-fade-in"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Rating -->
          <div class="flex gap-1 mb-4">
            {generateStars(testimonio.rating || 5).map((filled) => (
              <svg 
                class={`w-5 h-5 ${filled ? 'text-yellow-400 fill-current' : 'text-gray-300'}`} 
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          
          <!-- Testimonio -->
          <blockquote class="text-gray-700 mb-6 italic">
            "{testimonio.testimonio}"
          </blockquote>
          
          <!-- Autor -->
          <div class="flex items-center gap-3">
            <!-- Avatar -->
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white font-semibold">
              {testimonio.imagen}
            </div>
            
            <!-- Info -->
            <div>
              <div class="font-semibold text-gray-900">{testimonio.nombre}</div>
              <div class="text-sm text-gray-600">{testimonio.empresa}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA después de testimonios -->
    <div class="text-center mt-12 p-8 bg-blue-50 rounded-2xl">
      <p class="text-lg text-gray-700 mb-4">
        ¿Listo para unirte a cientos de empresas satisfechas?
      </p>
      <a 
        href="#formulario"
        class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
      >
        Crear Mi Página Gratis
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>