{
  "name": "wo-ai-tea-website",
  "type": "module",
  "version": "1.0.0",
  "description": "Sitio web oficial de Wo Ai Tea - La mejor experiencia de bubble tea en El Salvador",
  "author": {
    "name": "Wo Ai Tea",
    "email": "hola@woaitea.com",
    "url": "https://woaitea.com"
  },
  "license": "MIT",
  "homepage": "https://woaitea.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/woaitea/website.git"
  },
  "bugs": {
    "url": "https://github.com/woaitea/website/issues",
    "email": "soporte@woaitea.com"
  },
  "keywords": [
    "bubble-tea",
    "boba-tea",
    "mochi",
    "el-salvador",
    "astro",
    "tailwindcss",
    "restaurant",
    "food-delivery",
    "asian-drinks",
    "premium-tea"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "scripts": {
    "dev": "astro dev --host --port 3000",
    "start": "astro dev",
    "build": "astro check && astro build",
    "build:prod": "NODE_ENV=production astro build",
    "preview": "astro preview --host --port 4321",
    "preview:prod": "astro build && astro preview",
    "astro": "astro",
    "check": "astro check",
    "sync": "astro sync",
    "clean": "rm -rf dist .astro node_modules/.astro",
    "clean:install": "pnpm clean && pnpm install",
    "lint": "eslint . --ext .js,.ts,.astro --fix",
    "lint:check": "eslint . --ext .js,.ts,.astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "astro check && tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lighthouse": "lhci autorun",
    "analyze": "astro build && npx vite-bundle-analyzer dist",
    "deploy": "pnpm build:prod && pnpm preview",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "sitemap": "astro build && node scripts/generate-sitemap.js",
    "optimize:images": "node scripts/optimize-images.js",
    "backup": "node scripts/backup-content.js",
    "update:deps": "pnpm update --interactive",
    "security:audit": "pnpm audit --audit-level moderate",
    "performance:test": "node scripts/performance-test.js"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.8.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/partytown": "^2.1.2",
    "@astrojs/sitemap": "^3.4.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "astro-compress": "^2.3.1",
    "astro-robots-txt": "^1.0.0",
    "eslint": "^9.18.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "lighthouse": "^12.2.1",
    "@lhci/cli": "^0.14.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "sharp": "^0.33.5",
    "typescript": "^5.7.2",
    "vite-bundle-analyzer": "^0.11.0",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.28.1",
    "@rollup/rollup-darwin-x64": "^4.28.1",
    "@rollup/rollup-win32-x64-msvc": "^4.28.1"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.33.5"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "volta": {
    "node": "20.11.0",
    "pnpm": "8.15.0"
  },
  "config": {
    "site": {
      "name": "Wo Ai Tea",
      "url": "https://woaitea.com",
      "description": "La mejor experiencia de bubble tea en El Salvador",
      "lang": "es-SV",
      "locale": "es_SV"
    },
    "business": {
      "name": "Wo Ai Tea",
      "slogan": "Better TEAgether",
      "phone": "+503-1234-5678",
      "email": "hola@woaitea.com",
      "address": "Plaza Soho Las Cascadas, Local 15, Antiguo Cuscatlán, El Salvador",
      "hours": {
        "monday": "10:00-21:00",
        "tuesday": "10:00-21:00",
        "wednesday": "10:00-21:00",
        "thursday": "10:00-21:00",
        "friday": "10:00-22:00",
        "saturday": "10:00-22:00",
        "sunday": "11:00-20:00"
      },
      "social": {
        "instagram": "https://instagram.com/woaitea_sv",
        "facebook": "https://facebook.com/woaiteasv",
        "tiktok": "https://tiktok.com/@woaitea_sv",
        "whatsapp": "https://wa.me/50312345678"
      }
    },
    "seo": {
      "defaultTitle": "Wo Ai Tea - Bubble Tea Premium en El Salvador",
      "titleTemplate": "%s | Wo Ai Tea",
      "defaultDescription": "Descubre la auténtica experiencia de bubble tea en El Salvador. Ingredientes premium, mochis artesanales y el ambiente perfecto para compartir. ¡Better TEAgether!",
      "defaultImage": "/images/wo-ai-tea-og.jpg",
      "twitterHandle": "@woaitea_sv"
    },
    "analytics": {
      "googleAnalytics": "G-XXXXXXXXXX",
      "facebookPixel": "XXXXXXXXXX",
      "hotjar": "XXXXXXX"
    }
  },
  "lint-staged": {
    "*.{js,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm type-check && pnpm test"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "chore",
          "content",
          "design"
        ]
      ]
    }
  },
  "release": {
    "branches": [
      "main",
      "production"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}